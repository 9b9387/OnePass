<view class="page" data-weui-theme="{{theme}}">
	<view class="weui-form">
		<view class="weui-cells__group weui-cells__group_form">
			<view class="weui-cells weui-cells_form">

				<view class="weui-cell">
					<view class="weui-cell__hd"><label class="weui-label">Service</label></view>
					<view class="weui-cell__bd">
						<input class="weui-input" type="text" placeholder="e.g. weibo" value="{{config.service}}" placeholder-class="weui-input__placeholder" bindinput="onServiceInput" />
					</view>
					<view class="weui-cell__ft">
						<!-- <a class="weui-btn weui-btn_default weui-vcode-btn" bindtap="onClickMore">more</a> -->
              <!-- <a class="weui-btn_reset weui-btn_icon"> -->
								<!-- <i class="weui-icon-info-circle"></i> -->
                <image src="./baseline_more_horiz_black_24dp.png" style="width: 24px; height: 24px;" bindtap="onClickMore"></image>
							<!-- </a> -->
					</view>
				</view>

        <view class="weui-cell" style="{{isShow ? '' : 'display: none'}}; padding-top:0px; padding-bottom:0px;">
          <view class="weui-cell__hd"></view>
					<view class="weui-cell__bd">
					</view>
          <view class="weui-cell__ft">
            <a class="weui-btn weui-btn_mini weui-btn_default" style="margin-right:5px; margin-top:0px; overflow:visible"  bindtap="onClickView">view</a>
            <a class="weui-btn weui-btn_mini weui-btn_warn" style="margin-top:0px; overflow:visible"  bindtap="onClickDelete">
              <image src="./round_delete_forever_black_24dp.png" style="width: 24px; height: 24px;" bindtap="onClickMore"></image>
              delete
            </a>
          </view>
        </view>

				<view class="weui-cell">
					<view class="weui-cell__hd"><label class="weui-label">Phrase</label></view>
					<view class="weui-cell__bd">
						<input class="weui-input" type="text" placeholder="e.g. 123456" value="" placeholder-class="weui-input__placeholder" bindinput="onPassphraseInput" />
					</view>
				</view>
			</view>
		</view>
	</view>
</view>