<view class="page" data-weui-theme="light">
	<view class="weui-form">
		<view class="weui-cells__group weui-cells__group_form">
			<view class="weui-cells weui-cells_form">

				<view class="weui-cell">
					<view class="weui-cell__hd"><label class="weui-label">服务</label></view>
					<view class="weui-cell__bd">
						<input class="weui-input" type="text" placeholder="e.g. weibo" value="{{config.service}}" placeholder-class="weui-input__placeholder" bindinput="onServiceInput" />
					</view>
					<!-- <view class="weui-cell__ft">
						<image src="./baseline_more_horiz_black_24dp.png" style="width: 24px; height: 24px;" bindtap="onClickMore"></image>
					</view> -->

					<view class="weui-cell__ft">
						<image src="./round_tune_black_24dp.png" style="width: 24px; height: 24px;" bindtap="onClickSetting"></image>
					</view>
				</view>

				<view class="weui-cell" style="{{showOptions ? 'padding-top:6px; padding-bottom:6px;' : 'display: none'}} ">
					<view class="weui-cell__bd" style="padding-left:70px;"><label class="weui-label" style="color:#888">长度</label></view>
					<view class="weui-cell__bd">
						<picker bindchange="onClickLength" range="{{lengthList}}">
							<label class="weui-label" style="color:#888">{{config.length}}</label>
						</picker>
					</view>
				</view>

				<view class="weui-cell weui-cell_switch" style="{{showOptions ? 'padding-top:6px; padding-bottom:6px;' : 'display: none'}} ">
					<view class="weui-cell__bd" style="padding-left:70px; color:#888">字母</view>
					<view class="weui-cell__ft">
						<switch style="transform: scale(0.8);" checked="{{config.isLower}}" bindchange="onSwitchLower"></switch>
					</view>
				</view>

				<view class="weui-cell weui-cell_switch" style="{{showOptions ? 'padding-top:6px; padding-bottom:6px;' : 'display: none'}} ">
					<view class="weui-cell__bd" style="padding-left:70px; color:#888">数字</view>
					<view class="weui-cell__ft">
						<switch style="transform: scale(0.8);" checked="{{config.isNumber}}" bindchange="onSwitchNumber"></switch>
					</view>
				</view>

				<view class="weui-cell weui-cell_switch" style="{{showOptions ? 'padding-top:6px; padding-bottom:6px;' : 'display: none'}} ">
					<view class="weui-cell__bd" style="padding-left:70px; color:#888">符号</view>
					<view class="weui-cell__ft">
						<switch style="transform: scale(0.8);" checked="{{config.isSymbol}}" bindchange="onSwitchSymbol"></switch>
					</view>
				</view>

				<view class="weui-cell weui-cell_switch" style="{{showOptions ? 'padding-top:6px; padding-bottom:6px;' : 'display: none'}} ">
					<view class="weui-cell__bd" style="padding-left:70px; color:#888">
						<label style="color:#f88">确认删除该记录？</label>
					</view>

					<view class="weui-cell__ft">
						<image src="./round_check_black_24dp.png" style="width: 24px; height: 24px; margin-right:16px;" bindtap=""></image>
						<image src="./round_close_black_24dp.png" style="width: 24px; height: 24px; " bindtap=""></image>
						<!-- <image src="./round_delete_forever_black_24dp.png" style="width: 24px; height: 24px; " bindtap=""></image> -->
					</view>
				</view>

				<!-- <view class="weui-cell" style="{{isShow ? '' : 'display: none'}}; padding-top:6px; padding-bottom:6px;">
					<view class="weui-cell__hd"></view>
					<view class="weui-cell__bd">
					</view>
					<view class="weui-cell__ft">
						<a class="weui-btn weui-btn_mini weui-btn_default" style="margin-right:6px; margin-top:0px; overflow:visible" bindtap="onClickView">View</a>
						<a class="weui-btn weui-btn_mini weui-btn_warn" style="margin-top:0px; overflow:visible" bindtap="onClickDelete">Delete</a>
					</view>
				</view> -->

				<view class="weui-cell">
					<view class="weui-cell__hd"><label class="weui-label">密钥</label></view>
					<view class="weui-cell__bd">
						<input class="weui-input" type="text" placeholder="e.g. 123456" value="" placeholder-class="weui-input__placeholder" bindinput="onPassphraseInput" />
					</view>
					<view class="weui-cell__ft">
						<image src="./round_tune_black_24dp.png" style="width: 24px; height: 24px;" bindtap="onClickSetting"></image>
					</view>
				</view>
				
			</view>
		</view>
	</view>
</view>